//// Special cases
////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////

DEFINE_PATCH_FUNCTION "GENERAL_RACE_CLASS_FILTER_SPECIAL"
INT_VAR
	"animation" = "-1"
	"general" = "-1"
	"race" = "-1"
	"class" = "-1"
STR_VAR
	"file_res" = ""
BEGIN
	PATCH_MATCH "%race%" WITH
		// As far as I know, FEYR and WILL-O-WISP do not wear any "creature skin", so we cannot clone op101 (p2=39). As a result, let us manually add the relevant immunit(ies)
		"%RACE_FEYR%" "%RACE_WILL-O-WISP%" BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"delete_effect" => "match_opcode=>318, match_resource=>GTHOPEL" // Protection from resource
					"add_global_effect" => "opcode=>318, resource=>GTHOPEL" // Protection from resource
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		// As far as I know, FAIRY do not wear any "creature skin", so we cannot clone op101 (p2=39). As a result, let us manually add the relevant immunit(ies)
		"%RACE_FAIRY%" BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"delete_effect" => "match_opcode=>318, match_resource=>GTSLEEP" // Protection from resource
					"add_global_effect" => "opcode=>318, resource=>GTSLEEP" // Protection from resource
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		// As far as I know, ELEMENTAL do not wear any "creature skin", so we cannot clone op101 (p2=39). As a result, let us manually add the relevant immunit(ies)
		"%RACE_ELEMENTAL%" BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"delete_effect" => "match_opcode=>318, match_resource=>{GTSLEEP,GTUNCONS,GTNAUSEA,GTHOPEL}" // Protection from resource
					"add_global_effect" => "opcode=>318, resource=>{GTSLEEP,GTUNCONS,GTNAUSEA,GTHOPEL}" // Protection from resource
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		// As far as I know, GENIE do not wear any "creature skin", so we cannot clone op101 (p2=39). As a result, let us manually add the relevant immunit(ies)
		"%RACE_GENIE%" BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"delete_effect" => "match_opcode=>318, match_resource=>GTNAUSEA" // Protection from resource
					"add_global_effect" => "opcode=>318, resource=>GTNAUSEA" // Protection from resource
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		// Let us now list all RACEs that should be immune to Knockdown (Ground-based attacks)
		~%RACE_HARPY%~ ~%RACE_WYVERN%~ ~%RACE_IMP%~ ~%RACE_MEPHIT%~ BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"add_global_effect" => "opcode=>206, parameter1=>-1, resource=>{%CLERIC_EARTHQUAKE%,SPOGRE01,BPGIAQKE,OHBQUAKE,JWSIEGE}, when=>FILE_EXISTS_IN_GAME ~'resref_key'.spl~" // Protection from spell
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		// Only giant sized GOLEMs should be immune to Wing Buffet
		~%RACE_GOLEM%~ BEGIN
			PATCH_MATCH "%animation%" WITH
				"%ANIMATE_GOLEM_MINI%" "%ANIMATE_SKELETON_FIEND%" "%A7!GOLEM_BONE_DOLL%" "%ANIMATE_A7!GOLEM_FLESH_PST_MINI%" "%ANIMATE_A7!GOLEM_IRON_IWD_MINI%" "%ANIMATE_A7!GOLEM_IRON_MINI%" BEGIN END
				DEFAULT
					PATCH_MATCH "%file_res%" WITH
						"AVARICEM?" "PRIDEM?" "LOVEM?" BEGIN END // BG1: Pride, Love, Avarice
						"KING" "QUEEN" "ROOK" "BISHOP" "KNIGHT" "PAWN" BEGIN END // BG1: Durlag's Tower Chessboard
						DEFAULT
							PATCH_WITH_SCOPE BEGIN
								DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
									"delete_effect" => "match_opcode=>318, match_resource=>GTWINGB" // Protection from resource
									"add_global_effect" => "opcode=>318, resource=>GTWINGB"	// Protection from resource
								END
								LPF "APPLY_PATCHES"
								STR_VAR
									"edits" = "patch_data"
								END
							END
					END
			END
		END
		DEFAULT
	END
	// Humanoid Elementals (SALAMANDER) should not be immune to Knockdown
	PATCH_MATCH "%class%" WITH
		~%CLASS_ELEMENTAL_WATER%~ ~%CLASS_ELEMENTAL_EARTH%~ ~%CLASS_ELEMENTAL_FIRE%~ ~%CLASS_ELEMENTAL_AIR%~ WHEN ("%race%" != "%RACE_SALAMANDER%") BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"delete_effect" => "match_opcode=>318, match_resource=>GTKDOWN" // Protection from resource
					"add_global_effect" => "opcode=>318, resource=>GTKDOWN" // Protection from resource
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		DEFAULT
	END
	// Humanoid Elementals (SALAMANDER) should not be immune to Wing Buffet
	PATCH_MATCH "%class%" WITH
		~%CLASS_ELEMENTAL_WATER%~ ~%CLASS_ELEMENTAL_EARTH%~ WHEN ("%race%" != "%RACE_SALAMANDER%") BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"delete_effect" => "match_opcode=>318, match_resource=>GTWINGB" // Protection from resource
					"add_global_effect" => "opcode=>318, resource=>GTWINGB" // Protection from resource
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		DEFAULT
	END
	// As far as I know, Pride, Love, and Avarice (from BG1) do not wear any "creature skin", so we cannot clone op101 (p2=39). As a result, let us manually add the relevant immunit(ies)
	// The same holds for King, Pawn, Rook, Knight, Queen, Bishop (Durlag's Tower Chessboard)
	PATCH_MATCH "%file_res%" WITH
		"AVARICEM" "PRIDEM" "LOVEM"
		"KING" "QUEEN" "ROOK" "BISHOP" "KNIGHT" "PAWN" BEGIN
			PATCH_WITH_SCOPE BEGIN
				DEFINE_ASSOCIATIVE_ARRAY "patch_data" BEGIN
					"delete_effect" => "match_opcode=>318, match_resource=>{GTSLEEP,GTUNCONS,GTNAUSEA,GTHOPEL}" // Protection from resource
					"add_global_effect" => "opcode=>318, resource=>{GTSLEEP,GTUNCONS,GTNAUSEA,GTHOPEL}" // Protection from resource
				END
				LPF "APPLY_PATCHES"
				STR_VAR
					"edits" = "patch_data"
				END
			END
		END
		DEFAULT
	END
END
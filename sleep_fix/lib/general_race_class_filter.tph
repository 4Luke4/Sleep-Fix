	// Let us now list all RACEs that should be immune to Hopelessness
	PATCH_MATCH "%race%" WITH
		~%RACE_SLIME%~ ~%RACE_MIST%~ ~%RACE_GOLEM%~ ~%RACE_SWORD%~ BEGIN
			PATCH_MATCH "%file_ext%" WITH
				"ITM" BEGIN

								"clone_effect" => "check_headers=>0, match_opcode=>101, match_parameter2=>39, opcode=>318, parameter1=>%race%, parameter2=>104, resource=>GTUNCONS" // Protection from resource
							END
						END
						LPF "APPLY_PATCHES"
						STR_VAR
							"edits" = "patch_data"
						END
